tickers:
  - AAPL
  - MSFT
  - NVDA

db:
  host: "127.0.0.1"
  port: 5432
  name: "appdb"
  user: "appuser"

update:
  # 1d download start strategy:
  # - from_db: start from each ticker's latest stored date minus overlap days
  # - from_db_global: start from latest stored date across the selected ticker set
  # - fixed_lookback: always start from (today - daily_lookback_days)
  daily_start_mode: "from_db"
  daily_overlap_days: 3
  # Used only when a ticker has no rows in prices_1d yet.
  daily_bootstrap_lookback_days: 3650
  daily_lookback_days: 14
  intraday_enabled: true
  intraday_truncate_before_load: true
  intraday_period: "1d"
  keep_1m_hours: 30

bootstrap:
  daily_period: "1y"
  intraday_period: "7d"
